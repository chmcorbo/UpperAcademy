@model IEnumerable<UpperAcademy.Dominio.Modelo.Turma>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar Turmas</title>

    <script type="text/javascript">
        function redirecionar() {
            window.location = "../Home/Index";
        }
        
        function adicionar() {

            window.location = "../Turma/Adicionar";
         }
    </script>

</head>
<body>
   <h1> Lista de Turmas </h1>
    <p>
       <button onclick="redirecionar();">  Voltar  </button> 
       <button onclick="adicionar();">  Novo  </button>
    </p>
    <table>
        <tr>
            <th>
                Nível
            </th>
            <th>
                Data Início
            </th>
            <th>
                Data Término
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_fim)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id=item.ID }) |
                @Html.ActionLink("Detalhes", "Detalhar", new { id=item.ID }) |
                @Html.ActionLink("Excluir", "Excluir", new { id=item.ID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
